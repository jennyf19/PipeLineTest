@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "Publishing", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    <label for="file">Upload Text File:</label>
    <input type="file" name="file" id="file"/>
    <br><br />
    <input type="submit" value="Upload File"/>
    <br><br />
    @ViewBag.Message
}